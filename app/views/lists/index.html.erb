<nav class="navbar navbar-light bg-light">
  <form class="container-fluid justify-content-between">
    <%= link_to(root_path) do %>
      <%= image_tag "logo.png", alt: "Alien", width: 50 %>
    <% end %>
    <%= link_to 'Create a new list', new_list_path, class: 'btn btn-outline-success'%>
  </form>
</nav>

<div class="banner text-center d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "banner.jpg" %>);">
  <div class="container">
    <h1><strong>Movies My Bru<strong></h1>
  </div>
</div>



<div class="container p-5 align-items-center text-center">

  <h2 class="my-list">My Lists</h2>
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="container card-list d-flex flex-column m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
        <div class="row">
          <%= link_to list.name, list_path(list), class: "text-white" %>
        </div>
        <div class="row">
          <div class="justify-content-end">
            <%= link_to "Delete", list_path(list), method: :delete, class: "btn btn-outline-danger"%>
          </div>
        </div>
      </div>
      <br>
    <% else %>
      <div class="container card-list d-flex flex-column m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1521967906867-14ec9d64bee8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80)">
        <div class="row">
          <%= link_to list.name, list_path(list), class: "text-white" %>
        </div>
        <div class="row">
          <div class="justify-content-end">
            <%= link_to "Delete", list_path(list), method: :delete, class: "btn btn-outline-danger"%>
          </div>
        </div>
      </div>
      <br>
      <% end %>
  <% end %>

</div>
