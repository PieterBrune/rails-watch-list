<nav class="navbar navbar-light bg-light">
  <form class="container-fluid justify-content-between">
    <%= link_to(lists_path) do %>
      <%= image_tag "logo.png", alt: "Alien", width: 50 %>
    <% end %>
    <div class="">
      <%= link_to 'Home', lists_path, class: 'text-dark pr-2' %>
    </div>
