<div class="container p-5">
  <h1>Create a new list</h1>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.submit 'Create', class: 'btn btn-outline-success' %>
    <%= link_to "Cancel", lists_path, class: "btn btn-warning" %>
  <% end  %>
</div>
