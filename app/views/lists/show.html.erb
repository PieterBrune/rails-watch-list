<nav class="navbar navbar-light bg-light">
  <form class="container-fluid justify-content-between">
    <%= link_to(root_path) do %>
      <%= image_tag "logo.png", alt: "Alien", width: 50 %>
    <% end %>
    <div class="">
      <%= link_to 'Home', root_path, class: 'text-dark pr-2' %>
      <%= link_to 'Add to list', new_list_bookmark_path(@list), class: 'btn btn-outline-success'%>
    </div>
  </form>
</nav>
<div class="container-fluid p-4">
  <h1><%= @list.name %></h1>

  <div class="row d-flex justify-content-center">

    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mb-3 ml-1 mr-1 col-12 col-lg-4">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %> <span class="text-muted">• <%= bookmark.movie.rating %></span>⭐</h5>
            <p class="card-text text-secondary"><%= bookmark.movie.overview %></p>
            <div class="d-flex justify-content-between">
              <p class="card-text fw-bolder"><span class="fs-4">"</span><%= bookmark.comment %></p>
              <p><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
